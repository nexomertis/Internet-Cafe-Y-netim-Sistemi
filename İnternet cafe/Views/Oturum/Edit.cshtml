@* Model tanımla *@
@model InnternetCafe.Varliklar.Oturum

@* ViewData["Title"] ayarla *@
@{
    ViewData["Title"] = "Oturum Düzenle";
}

@* h1 başlık *@
<h1>Oturum Düzenle</h1>

@* Form - asp-action="Edit" method="post" *@
<form asp-action="Edit" method="post">
    @* Hidden input - Id *@
    <input type="hidden" asp-for="Id" />
    @* KullaniciId için input *@
    <div class="mb-3">
        <label asp-for="KullaniciId" class="form-label"></label>
        <input asp-for="KullaniciId" class="form-control" />
    </div>
    @* BilgisayarId için input *@
    <div class="mb-3">
        <label asp-for="BilgisayarId" class="form-label"></label>
        <input asp-for="BilgisayarId" class="form-control" />
    </div>
    @* Submit butonu + İptal linki *@
    <button type="submit" class="btn btn-primary">Güncelle</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>
