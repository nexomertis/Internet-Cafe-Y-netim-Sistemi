@* Model tanımla - IEnumerable<Bilgisayar> (listeyi alacak) *@
     @model IEnumerable<InnternetCafe.Varliklar.Bilgisayar>

@* sayfa başlığı için ViewData["Title"] ayarla *@
@{
    ViewData["Title"] = "Bilgisayarlar";
}  

@* h1 ile "Bilgisayarlar" başlığı yaz *@
    <h1>Bilgisayarlar</h1>


@* "Yeni Ekle" butonu - asp-action="Create" ile link *@
<a asp-action="Create" class="btn-primary">Yeni Ekle</a>

@* table oluştur - thead içinde sütun başlıkları: Bilgisayar No, Durum, Saatlik Ücret, İşlemler *@
  <table class="table">
      <thead>
          <tr>
              <th>Bilgisayar No</th>
              <th>Durum</th>
              <th>Saatlik Ücret</th>
              <th>İşlemler</th>
          </tr>
      </thead>
      <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.BilgisayarNo</td>
                <td>@(item.Durum ? "Dolu" : "Boş")</td>
                <td>@item.SaatlikUcret TL</td> 
                <td>
                    <a asp-action = "Edit" asp-route-id="@item.Id">Düzenle</a>
                    <a asp-action = "Details"asp-route-id="@item.Id">Detaylar</a>
                    <a asp-action=  "Delete"asp-route-id="@item.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
  </table>

